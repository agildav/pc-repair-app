doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4.fixed-top
      .container
        a.navbar-brand(href='/') PC Repair
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li(class = title == 'PC Repair' ? 'active nav-item' : 'nav-item')
              a.nav-link(href='/') Home 
                span.sr-only (current)
            li(class = title == 'About' ? 'active nav-item' : 'nav-item')
              a.nav-link(href='/about') About
            li(class = title == 'Services' ? 'active nav-item' : 'nav-item')
              a.nav-link(href='/services') Services
            li(class = title == 'Contact' ? 'active nav-item' : 'nav-item')
              a.nav-link(href='/contact') Contact

    .container
      block content
    
    hr
    footer
      p.text-center PC Repair &copy; 2018

    script(src='/javascripts/jquery-3.3.1.slim.min.js')
    script(src='/javascripts/bootstrap.min.js')
